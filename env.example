# Boostlly Environment Configuration Example
# Copy this file to .env in your project root and fill in the values

# ==============================================
# APP CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_NAME=Boostlly
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable voice commands (uses Web Speech API)
NEXT_PUBLIC_ENABLE_VOICE=true

# Enable analytics tracking (currently local only)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable social features (sharing, comments)
NEXT_PUBLIC_ENABLE_SOCIAL=false

# Enable API integration
NEXT_PUBLIC_ENABLE_API=false

# ==============================================
# API ENDPOINTS (if using external quote APIs)
# ==============================================
# External quote API URL (optional)
NEXT_PUBLIC_QUOTE_API_URL=

# API key for external quote service (optional)
NEXT_PUBLIC_QUOTE_API_KEY=

# Quotable API endpoint (optional)
NEXT_PUBLIC_QUOTABLE_API=https://api.quotable.io

# ZenQuotes API endpoint (optional)
NEXT_PUBLIC_ZENQUOTES_API=https://zenquotes.io/api

# ==============================================
# BACKGROUND IMAGES
# ==============================================
# Picsum Photos API (used for backgrounds)
NEXT_PUBLIC_PICSUM_API=https://picsum.photos

# Custom background image URL (optional)
NEXT_PUBLIC_CUSTOM_BACKGROUND_URL=

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Node environment (development, production, test)
NODE_ENV=development

# Enable debug logging
DEBUG=false

# Enable hot reload
FAST_REFRESH=true

# ==============================================
# PWA CONFIGURATION
# ==============================================
# Service worker enabled
NEXT_PUBLIC_SW_ENABLED=true

# Offline mode enabled
NEXT_PUBLIC_OFFLINE_MODE=true

# ==============================================
# EXTENSION CONFIGURATION
# ==============================================
# Chrome extension ID (for published extension)
NEXT_PUBLIC_EXTENSION_ID=

# ==============================================
# STORAGE CONFIGURATION
# ==============================================
# Storage quota (in MB)
NEXT_PUBLIC_STORAGE_QUOTA=50

# Enable storage encryption (not implemented yet)
NEXT_PUBLIC_STORAGE_ENCRYPTION=false

# ==============================================
# SOUND SETTINGS
# ==============================================
# Enable sound effects
NEXT_PUBLIC_ENABLE_SOUNDS=true

# Default sound volume (0.0 to 1.0)
NEXT_PUBLIC_DEFAULT_VOLUME=0.5

# ==============================================
# TEXT-TO-SPEECH SETTINGS
# ==============================================
# Enable text-to-speech
NEXT_PUBLIC_ENABLE_TTS=true

# Default TTS voice (browser dependent)
NEXT_PUBLIC_TTS_VOICE=

# TTS rate (0.1 to 10)
NEXT_PUBLIC_TTS_RATE=1.0

# TTS pitch (0 to 2)
NEXT_PUBLIC_TTS_PITCH=1.0

# ==============================================
# PERFORMANCE
# ==============================================
# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERF=true

# Enable bundle analysis
ANALYZE=true

# ==============================================
# SECURITY
# ==============================================
# Content Security Policy mode (report-only, enforce)
CSP_MODE=enforce

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# ==============================================
# TESTING
# ==============================================
# Test environment
TEST_ENV=jsdom

# Enable test coverage
COVERAGE=false

# ==============================================
# BUILD CONFIGURATION
# ==============================================
# Enable source maps in production
GENERATE_SOURCEMAP=false

# Bundle size limit (in KB)
BUNDLE_SIZE_LIMIT=500

# Image optimization quality (1-100)
IMAGE_QUALITY=80

# ==============================================
# NOTES
# ==============================================
# - NEXT_PUBLIC_* variables are exposed to the browser
# - Other variables are only available server-side
# - Never commit .env files with sensitive data
# - Use .env.local for local development overrides
# - See documentation at docs/guides/DEVELOPMENT_GUIDE.md

