{
  "name": "boostlly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Daily motivation app - Web PWA and Chrome Extension",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "web": "pnpm --filter @boostlly/web dev",
    "extension": "pnpm --filter @boostlly/extension dev",
    "build": "node scripts/fresh-build.js",
    "build:quick": "pnpm --recursive run build && node scripts/fix-emojis.js",
    "build:web": "pnpm --filter @boostlly/web run clean && NODE_ENV=production pnpm --filter @boostlly/web build && node scripts/fix-emojis.js",
    "build:ext": "pnpm --filter @boostlly/extension run clean && pnpm --filter @boostlly/extension build && node scripts/fix-emojis.js",
    "build:watch": "node scripts/auto-build.js",
    "build:fresh": "node scripts/fresh-build.js",
    "test": "pnpm --recursive run test",
    "type-check": "pnpm --recursive run type-check",
    "lint": "pnpm --recursive run lint",
    "clean": "node scripts/clean-build.js",
    "clean:all": "pnpm --recursive run clean && node scripts/clean-build.js",
    "fix-emojis": "node scripts/fix-emojis.js"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
